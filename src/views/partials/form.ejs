<form id="Form_" enctype="multipart/form-data" method="POST" action="/tablas/submit">

  <div class="form-group row justify-content-center ">
    
    <label for="Nombre" class="col-sm-2 col-form-label">Nombre</label>

    <div class="col-sm-8">
      <input type="text" class="form-control" pattern="^[a-zA-Z\u00C0-\u00FF ]*" title="Solo letras" id="Nombre" name="Name" placeholder="Tu nombre aqui" required>
    </div>

  </div>

  <div class="form-group row justify-content-center ">
    
    <label for="Edad" class="col-sm-2 col-form-label">Edad</label>

    <div class="col-sm-8">
      <input type="number" class="form-control" id="Edad" placeholder="valor maximo:100"  name="Age" min="1" step="1" max="100" required>
    </div>

  </div>
  <div class="form-group row justify-content-center ">
    
    <label for="IU" class="col-sm-2 col-form-label">Identificador Unico</label>

    <div class="col-sm-8">
      <input type="text" pattern="^[a-zA-Z\u00C0-\u00FF0-9]*" class="form-control" id="IU" placeholder="Cualquier conjunto alfa-numérico, 5 caracteres maximo" minlength="1" name="UID" maxlength="5" required>
    </div>

  </div>
  <fieldset class="form-group">

      <div class="row justify-content-center">

        <legend class="col-form-label col-sm-2 pt-0 d-block">¿Tiene Permisos?</legend>

        <div class="col-sm-8">

          <div class="form-check form-check-inline">

            <input class="form-check-input" type="radio" name="perms" id="perm_YES" value="true" required>
            <label class="form-check-label" for="perm_YES">SI</label>

          </div>

          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="perms" id="perm_NO" value="false" required>
            <label class="form-check-label" for="perm_NO">NO</label>
          </div>

        </div>

        <div class="col-sm-10 pt-2">
          <input type="submit" value="Enviar!" class="btn btn-outline-primary ">
        </div>
      </div>
      
  </fieldset>


</form>


